{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    },
    "include": [
        "./scripts/**/*",
        "./test/**/*",
        "./typechain-types/**/*",
        "hardhat.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "cache",
        "artifacts"
    ]
}